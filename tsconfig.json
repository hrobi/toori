{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": false,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* typescript transpiling */
    "moduleResolution": "bundler",
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,

    /* platforms */
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["test", "dist", "node_modules"]
}