{
  "name": "toori",
  "version": "0.1.3-alpha",
  "description": "An extensible, convinient typescript library for various pattern matching.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist",
    "/src",
    "package.json"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrobi/toori.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "keywords": [
    "pattern",
    "matching",
    "discriminated",
    "http response match",
    "match",
    "exhaustive",
    "union",
    "type",
    "safety"
  ],
  "author": "Róbert Horváth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hrobi/toori/issues"
  },
  "homepage": "https://github.com/hrobi/toori#readme",
  "prettier": {
    "trailingComma": "es5",
    "objectWrap": "preserve",
    "printWidth": 90
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
